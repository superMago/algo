#include <iostream>
#include <string>
#include <vector>
using namespace std;


int main()
{
    int no;
    cin >> no;
    vector <string> words;
    string word;
    int i = 0;
    for (int i = 0; i < no; i++) {
        cin >> word;
        words.push_back(word);
    }

    for (i = 0; i < no;i++) {
        if (words.at(i).length() > 10) {

            cout << words.at(i).front() << (words.at(i).length() - 2) << words.at(i).back()<<endl;
        }
        else {
            cout << words.at(i)<<endl;
        }
    }

    return 0;
    

}

